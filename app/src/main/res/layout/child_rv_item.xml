<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_margin="10dp"
        app2:layout_constraintTop_toTopOf="parent"
        app2:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3' goal by"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        app2:layout_constraintBottom_toTopOf="@+id/team1Action"
        app2:layout_constraintEnd_toStartOf="@+id/playerView"
        app2:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team1Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cucho"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app2:layout_constraintBottom_toTopOf="@+id/view"
        app2:layout_constraintEnd_toStartOf="@+id/playerView"
        app2:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/playerView"
        android:layout_width="24.8dp"
        android:layout_height="24.8dp"
        android:cropToPadding="true"
        app2:layout_constraintBottom_toBottomOf="@+id/view"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        app2:layout_constraintTop_toBottomOf="@id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>